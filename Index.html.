    .status { font-size: 1.2rem; margin-top: 1rem; }
    button { margin-top: 1.5rem; padding: 0.5rem 1rem; font-size: 1rem; border: none; background: #007BFF; color: white; border-radius: 8px; cursor: pointer; }
