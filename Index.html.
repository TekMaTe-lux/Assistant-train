<body>
  <div class="card">
    <h1>Train Thionville > Luxembourg</h1>
    <div class="status" id="train-status">Chargement...</div>
    <button onclick="checkTrainStatus()">Actualiser</button>
  </div>

  <script>
    async function checkTrainStatus() {
      const status = document.getElementById("train-status");
      status.textContent = "Vérification en cours...";

      const response = await fetch("https://api.sncf.com/v1/coverage/sncf/stop_areas/stop_area:OCE:SA:87761007/departures?count=10", {
        headers: {
          "Authorization": "Basic MjQyZmFjMTEtNmQ5OC00NWZiLTkzZGYtMjgxNzRkMzYyNDQ3Og=="
        }
      });
      const data = await response.json();

      const train = data.departures.find(dep => dep.display_informations && dep.display_informations.direction.includes("Luxembourg"));

      if (!train) {
        status.textContent = "Aucun train vers Luxembourg trouvé.";
        return;
      }

      const baseTime = train.stop_date_time.base_departure_date_time;
      const realTime = train.stop_date_time.departure_date_time;

      if (baseTime !== realTime) {
        const delayMin = (new Date(realTime) - new Date(baseTime)) / 60000;
        status.textContent = `Retard de ${Math.round(delayMin)} minutes.`;
      } else {
        status.textContent = "Train à l'heure.";
      }
    }

    checkTrainStatus();
  </script>
</body>
</html>
